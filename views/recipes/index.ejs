<%- include('../partials/header') %>

<header><%= title %></header>

<nav>
    <a href="/recipes/new">Add Recipe</a>
</nav>

<% if (recipes.length) { %>
    <% recipes.forEach(recipe => { %>
        <div class="cards">
            <div class="card">
                <img src="https://i.imgur.com/ADrgRvy.jpg" alt="egg text img" height="100vh" width="180vw" class="card__image">
                <div class="card_content">
                    <p> <%= recipe.title %></p>
                </div>
                <div class="card_info">
                    <a href="/recipes/<%= recipe._id%>"class="card_link">View Recipe</a>
                </div>
            </div>
   <% }); %> 
<% } else { %> 
    <h3>Sorry no recipes yet - you should add one!</h3>
<% } %> 
