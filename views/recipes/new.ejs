<%- include('../partials/header') %>

<form id="new-recipe-form" action="/recipes" method="POST">
    <label>Recipe Name:</label>
    <input type="text" name="title">
    <label>Key Ingredient</label>
    <select name="ingredients">
        <option value="Bacon">Bacon</option>
        <option value="Beans">Beans</option>
        <option value="Beef">Beef</option>
        <option value="Chicken">Chicken</option>
        <option value="Eggs">Eggs</option>
        <option value="Lentils">Lentils</option>
        <option value="Potato">Potatoes</option>
        <option value="Pasta">Pasta</option>
        <option value="Rice">Rice</option>
    </select>
    <label>Instructions</label>
    <input type="text" name="instructions">
    <label>Image?</label>
    <input type="text" name="food-pic">
    <label>Servings</label>
    <input type="Number" name="servings">
    <label>Prep Time</label>
    <input type="Number" name="prepTime">
    <label>Cook Time</label>
    <input type="Number" name="cookTime"> 
    <input type="submit" value="Add Recipe">
</form>


<%- include('../partials/footer') %>